package javafinalproject; 
import java.util.Scanner; 

public class MultipleChoiceQuestions { 
public static void main(String[] args) { 
    Scanner scnr = new Scanner(System.in); 
    String[] answers = {"b", "d", "d"}; 
    int score = 0; 
    
    //easy level
    System.out.println("1. Who invented Java Programming?"); 
    System.out.println("a. Guido van Rossum"); 
    System.out.println("b. James Gosling"); 
    System.out.println("c. Dennis Ritchie"); 
    System.out.println("d. Bjarne Stroustrup"); 
    System.out.print("Your answer: "); 
    String answer1 = scnr.nextLine();  
    
    if (answer1.equalsIgnoreCase(answers[0])) { 
    score++; 
    } 
    
    System.out.println("2. Which statement is true about Java?"); 
    System.out.println("a. Java is a sequence-dependent programming language"); 
    System.out.println("b. Java is a code dependent programming language"); 
    System.out.println("c. Java is a platform-dependent programming language"); 
    System.out.println("d. Java is a platform-independent programming language"); 
    System.out.print("Your answer: "); 
    String answer2 = scnr.nextLine(); 
    
    if (answer2.equalsIgnoreCase(answers[1])) { 
      score++; 
    } 

    System.out.println("3. What is the correct definition of a package?"); 
    System.out.println("a. Collection of classes"); 
    System.out.println("b. Collection of editing tools"); 
    System.out.println("c. Collection of interfaces"); 
    System.out.println("d. Collection of interfaces and classes"); 
    System.out.print("Your answer: "); 
    String answer3 = scnr.nextLine(); 
    
    if (answer3.equalsIgnoreCase(answers[2])) { 
    
    score++; 
    
    } 

    System.out.println("Your score: " + score + "/3"); 
} 
} 

 

 

 
